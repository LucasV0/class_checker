{% extends 'base.html.twig' %}

{% block title %}Class Checker - Étudiants {% endblock %}
{% block style %}
    <link href="{{ asset('assets/vendor/datatables/dataTables.bootstrap4.min.css') }}" rel="stylesheet">

    <link href="https://cdn.datatables.net/buttons/2.3.6/css/buttons.dataTables.min.css" rel="stylesheet">
{% endblock %}
{% block script %}
{% endblock %}
{% block body %}

    {% for message in app.flashes('success')%}
        <div class="flash" data-state=success><strong>{{ message }}</strong></div>
    {% endfor %}

    <div class="mx-lg-5 pt-2 mb-4" style="width: 95%">
        <h1 class="justify-content-center d-flex text-center text-dark">Liste des élèves</h1>
            <table class="table table-hover table-bordered" id="dataTable">
                <thead >
                <tr class="table-primary">
                    <th>Nom</th>
                    <th>PRENOM</th>
                    <th>SEXE</th>
                    <th>EMAIL</th>
                    <th>DATE DE NAISSANCE</th>
                    <th>NIVEAU</th>
                    <th>ABSENCE</th>
                    <th>ACTION</th>
                </tr>
                </thead>
                <tbody>
                {% for  student in students %}
                    <tr>
                        <td class="ps-2">{{ student.name }}</td>
                        <td class="ps-2">{{ student.surname }}</td>
                        <td class="ps-2">{{ student.gender }}</td>
                        <td class="ps-2">{{ student.email }}</td>
                        <td class="ps-2">{{ student.birthday | date('d/m/Y') }}</td>
                        <td class="ps-2">{{ student.level }}</td>
                        <td class="ps-2">{{ student.toHave.count }}</td>
                        <td class="ps-2" style="width:10em ">
                            <a class="btn btn-outline-warning btn-sm" href="{{ path('app_student_update', {id: student.id}) }}" >Modifier</a>
                            <a class="btn btn-outline-danger btn-sm" onclick="return confirm('Voulez vous vraiment supprimer l\'éléve')" href="{{ path('app_student_delete', {id: student.id}) }}" >Supprimer</a>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
    </div>
{% endblock %}
