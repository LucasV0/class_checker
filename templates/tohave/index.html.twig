{% extends 'base.html.twig' %}

{% block style %}
    <!-- Include the default stylesheet -->
    <link href="
{{ asset('assets/vendor/datatables/dataTables.bootstrap4.min.css') }}
" rel="stylesheet">
    <link href="https://cdn.datatables.net/buttons/2.3.6/css/buttons.dataTables.min.css" rel="stylesheet">
{% endblock %}

{% block title %}Class Checker - Attribution élèves à cours{% endblock %}

{% block body %}
    <div id="alert">

    </div>
    <div class="mx-lg-5 pt-2 mb-4" >

        <h4 class="text-center"> Ajout d'éléves</h4>
        <h5> {{ lesson.label }}</h5>
        <table class="table table-hover table-bordered" id="dataTable">
            <thead >
            <tr class="table-primary">
                <th></th>
                <th>NOM</th>
                <th>PRENOM</th>
                <th>EMAIL</th>
            </tr>
            </thead>
            <tbody>
            {% for student in students %}
                <tr>

                    <td class=" table-primary"><div class="form-check ps-4">
                            <input id="{{ student.id }}" {% for toHaves in student.toHave %} {% if toHaves.Lessons is same as lesson%} checked  onclick="delStudent({{ student.id }}, {{ lesson.id }})"{% endif%} {% endfor %}onclick="addStudent({{ student.id }}, {{ lesson.id }} )" class="form-check-input" type="checkbox">
                            <label class="form-check-label" for="flexCheckDefault">
                            </label>
                        </div>
                    </td>
                    <td class="ps-2">{{ student.name }}</td>
                    <td class="ps-2">{{ student.surname }}</td>
                    <td class="ps-2">{{ student.email }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}
{% block script %}
    <!-- Include plugin -->
<script src="{{ asset('assets/js/ajaxAddStudentsToLesson.js') }}"></script>
{% endblock %}
