{% extends 'base.html.twig' %}

{% block title %}Class Checker -
    {% if route is same as 'app_period_new' %}
    Creation d'une période
    {% elseif route is same as 'app_period_edit' %}
    Modification d'une période
    {% endif %}
{% endblock %}
{% block style %}
    <link href="
https://cdn.jsdelivr.net/npm/lightpick@1.6.2/css/lightpick.min.css
" rel="stylesheet">
    <link href="
{{ asset('assets/css/mdtimepicker.min.css') }}
" rel="stylesheet">
    <link href="
{{ asset('assets/css/mdtimepicker-theme.css') }}
" rel="stylesheet">

{% endblock %}
{% block body %}
    <div class="container mb-4">

        <h1 class="mt-2 d-flex justify-content-center text-dark">
            {% if route is same as 'app_period_new' %}
                Creation d'une période
            {% elseif route is same as 'app_period_edit' %}
                Modification d'une période
            {% endif %}
        </h1>

        {{ form_start(form) }}


        <div class="row mt-3">
            <div class="col">
                {{ form_row(form.Period_Start) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form.Period_Start) }}
                </div>
            </div>

            <div class="col" id="some-custom-id">
                {{ form_row(form.Period_End) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form.Period_End) }}
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col">
                {{ form_row(form.Session) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form.Session) }}
                </div>
            </div>
            <div class="col">
                {{ form_row(form.currentPeriod) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form.currentPeriod) }}
                </div>
            </div>
        </div>
        <div>
            <div class="mt-3 d-flex justify-content-evenly">
                <a class="mt-4 ms-5 btn btn-outline-danger" href="{{ path('app_period') }}">Annuler</a>
                {{ form_row(form.submit) }}
            </div>
        </div>

        {{ form_end(form) }}
    </div>



{% endblock %}
{% block script %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
    <script src="
{{ asset('assets/js/mdtimepicker.min.js') }}
"></script>
    <script src="
https://cdn.jsdelivr.net/npm/lightpick@1.6.2/lightpick.min.js
"></script>
    <script src="{{ asset('assets/js/datePickerPeriod.js') }}"></script>
{% endblock %}