{% extends 'base.html.twig' %}

{% block title %}Create Lesson Pages{% endblock %}
{% block style %}
    <link rel="stylesheet" href="https://unpkg.com/js-datepicker/dist/datepicker.min.css">
{% endblock %}
{% block body %}
    <div class="container mb-4">

        <h1 class="mt-2 d-flex justify-content-center text-decoration-underline">
            Cr√©ation d'un cours
        </h1>

        {{ form_start(form) }}


        <div class="row mt-3">
            <div class="col">
                {{ form_row(form.label) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form.label) }}
                </div>
            </div>

            <div class="col" id="some-custom-id">
                {{ form_row(form.number_Max_Of_Students) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form.number_Max_Of_Students) }}
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col">
                {{ form_row(form.day) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form.day) }}
                </div>
            </div>
        </div>

        <div class="row mt-1">
            <div class="col">
                {{ form_row(form.time_Start) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form.time_Start) }}
                </div>
            </div>

            <div class="col" id="some-custom-id">
                {{ form_row(form.time_End) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form.time_End) }}
                </div>
            </div>
        </div>

        <div class="row mt-1">
            <div class="col">
                {{ form_row(form.hours_Start) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form.hours_Start) }}
                </div>
            </div>

            <div class="col" id="some-custom-id">
                {{ form_row(form.hours_End) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form.hours_End) }}
                </div>
            </div>
        </div>

        <div>
            <div class="col d-flex justify-content-center">
                {{ form_row(form.submit) }}

            </div>
        </div>

        {{ form_end(form) }}
    </div>
    <script src="https://unpkg.com/js-datepicker"></script>
    <script src="{{ asset('assets/js/datePickerScript.js') }}"></script>

{% endblock %}
