{% extends 'base.html.twig' %}

{% block title %}Class Checker - Creation d'un cour{% endblock %}
{% block style %}
    <link href="
https://cdn.jsdelivr.net/npm/lightpick@1.6.2/css/lightpick.min.css
" rel="stylesheet">
    <link href="
{{ asset('assets/css/mdtimepicker.min.css') }}
" rel="stylesheet">
    <link href="
{{ asset('assets/css/mdtimepicker-theme.css') }}
" rel="stylesheet">

{% endblock %}
{% block body %}
    <div class="container mb-4">

        <h1 class="mt-2 d-flex justify-content-center text-dark">
            Cr√©ation d'un cours
        </h1>

        {{ form_start(form) }}


        <div class="row mt-3">
            <div class="col">
                {{ form_row(form.label) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form.label) }}
                </div>
            </div>

            <div class="col" id="some-custom-id">
                {{ form_row(form.number_Max_Of_Students) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form.number_Max_Of_Students) }}
                </div>
            </div>
        </div>

        <div class="row mt-3">
            <div class="col">
                {{ form_row(form.day) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form.day) }}
                </div>
            </div>
            <div class="col">
                {{ form_row(form.period) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form.period) }}
                </div>
            </div>
        </div>



        <div class="row mt-1">
            <div class="col">
                {{ form_row(form.hours_Start) }}
            </div>

            <div class="col" id="some-custom-id">
                {{ form_row(form.hours_End) }}
            </div>
        </div>

        <div class="d-flex justify-content-center text-center">
            <div class="row d-flex justify-content-center" style="width: 50%">
                <div class="col pe-0 ">
                    {{ form_row(form.time_Start) }}
                </div>

                <div class="col p-0 m-0">
                    {{ form_row(form.time_End) }}
                </div>

                <div class="my-custom-class-for-errors">
                        {{ form_errors(form.time_Start) }} {{ form_errors(form.time_End) }}
                </div>
            </div>
        </div>

        <div>
            <div class="mt-3 d-flex justify-content-evenly">
                <a class="mt-4 ms-5 btn btn-outline-danger" href="{{ path('app_lesson') }}">Annuler</a>
                {{ form_row(form.submit) }}
            </div>
        </div>

        {{ form_end(form) }}
    </div>



{% endblock %}
{% block script %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
    <script src="
{{ asset('assets/js/mdtimepicker.min.js') }}
"></script>
    <script src="
https://cdn.jsdelivr.net/npm/lightpick@1.6.2/lightpick.min.js
"></script>
    <script src="{{ asset('assets/js/datePickerScript.js') }}"></script>
{% endblock %}