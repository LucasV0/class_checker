{% extends 'base.html.twig' %}


{% block stylesheets %}
    {{ parent() }}
    {{asset(assets/css/loginStyle.css)}}
{% endblock %}

{% block title %}Class Checker - Connexion{% endblock %}

{% block body %}
    {% for message in app.flashes("warning") %}
        <div class="flash" data-state="warning">
  <strong>{{message}}</strong></div>
        
      {% endfor %}
    {% for message in app.flashes("error") %}
        <div class="flash" data-state="error">
            <strong>{{message}}</strong></div>

    {% endfor %}

<section class="container">
    <div class="row">
        <div class="col">
            <form method="post">

                <img src={{ asset('media/Black_White.png') }} width="250px">
                <h1>CLASS CHECKER</h1>
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
             
                <h1 class="h3">Connexion</h1>
                <label for="inputEmail">Email</label>
                <input type="email"  name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                <label for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
            
                <a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√©</a><br>
                <button class="btn btn-lg btn-primary mt-3" type="submit">
                    Me connecter
                </button>
     
            </form>


        </div>
    </div>
</section>


{% endblock %}
