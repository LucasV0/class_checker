{% extends 'base.html.twig' %}


{% block stylesheets %}
{% endblock %}

{% block title %}Class Checker - Connexion{% endblock %}

{% block body %}
    {% for message in app.flashes("warning") %}
        <div class="flash" data-state="warning">
  <strong>{{message}}</strong></div>
        
      {% endfor %}
    {% for message in app.flashes("error") %}
        <div class="flash" data-state="error">
            <strong>{{message}}</strong></div>

    {% endfor %} 
    <link href="{{asset('assets/css/loginStyle.css')}}"  rel="stylesheet">
    <main class="d-flex justify-content-center">
<section class="container2">
    <div class="row">
        <div class="col">
            <form method="post">

                <img class="logo" src={{ asset('media/Blue.png') }} width="250px">
                <div class="margin-neg">
                
                {% if error %}
                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
                <h2 class="txt-blackBold">CLASS CHECKER</h2>
                <h4 class="txt-black text-center mt-4">Connexion</h4>
                <label class="mt-2" for="inputEmail">Email</label>
                <input type="email"  name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                <label class="mt-2" for="inputPassword">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
            
                <input type="hidden" name="_csrf_token"
                       value="{{ csrf_token('authenticate') }}"
                >
            
                <a href="{{ path('app_forgot_password_request') }}">Mot de passe oubli√©</a><br>
                <div class="d-flex justify-content-center mt-2"><button class="btn btn-success mt-3 " type="submit">
                    Me connecter
                </button></div>
     </div>
            </form>


        </div>
    </div>
</section>
</main>


{% endblock %}
