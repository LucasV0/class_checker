{% block style %}
    
    <link href="{{ asset('assets/css/2faLoginStyle.css') }}" rel="stylesheet">
{% endblock %}

{#page web qui contient un formulaire pour activer l'authentification à double facteur #}

<section class="container">
    <div class="row">
        <div class="col">
            <h1><label for="_auth_code">Veuillez mettre le code reçu par mail: </label></h1>

            <form class="form" action="/2fa_check" method="post">
                <p class="widget">
                    <input
                        id="_auth_code"
                        type="text"
                        name="_auth_code"
                        autocomplete="one-time-code"
                        autofocus
                                />

                </p>

                        <p class="submit"><input type="submit" value="Connexion" /></p>
            </form>

            <p class="cancel"><a href="/logout">Annuler</a></p>

        </div>
    </div>
</section>